{
    "files.exclude": {
      ".git/": true,
      "node_modules/": false,
      "dist/": false
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/dist": true
    },

    // Personally I like 80 for readability but enforce 100
    "editor.tabSize": 2,
    "editor.rulers": [80, 100, 120],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // Default (format when you paste)
    "editor.formatOnPaste": true,
    // Default (format when you save)
    "editor.formatOnSave": true,
    
    // Add some colorization using the MPLSART color palette 
    "workbench.colorCustomizations": {
      "titleBar.activeBackground": "#6F166C",
      "titleBar.inactiveBackground": "#581965",
      "titleBar.activeForeground": "#ffffff",
      "titleBar.inactiveForeground": "#ffffff",
      "statusBar.background": "#6F166C",
      "statusBar.activeForeground": "#fff"
    }
  }